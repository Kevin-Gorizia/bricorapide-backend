datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String?
  password     String
  role         UserRole      @default(USER)
  createdAt    DateTime      @default(now())
  reservations Reservation[]
}

model Product {
  id              Int           @id @default(autoincrement())
  name            String
  description     String?
  imageUrl        String?
  category        String?
  priceCents      Int
  durationMinutes Int?
  stock           Int?
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  reservations    Reservation[] @relation("ProductsOnReservations")
}

model Reservation {
  id                    Int               @id @default(autoincrement())
  user                  User              @relation(fields: [userId], references: [id])
  userId                Int
  nomClient             String?
  emailClient           String?
  service               String
  surface               Int?
  distanceKm            Float?
  amountCents           Int
  status                ReservationStatus @default(PENDING)
  stripePaymentIntentId String?
  scheduledAt           DateTime?
  notes                 String?
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  products              Product[]         @relation("ProductsOnReservations")
}
